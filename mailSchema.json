{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/ShazaAllam2001/Mail-server.git/mailSchema.json",

    "title": "Email",
    "description": "Email information",
    "type": "object",
    "properties": {
        "id": {
            "description": "The unique identifier for an email",
            "type": "string",
            "minLength": 10,
            "maxLength": 10
        },
        "time": {
            "description": "When the email is sent",
            "type": "string",
            "format": "date-time"
        },
        "subject": {
            "description": "The email subject",
            "type": "string"
        },
        "sender": {
            "description": "The email sender",
            "type": "string",
            "format": "idn-email"
        },
        "recievers" : {
            "description": "The email recievers",
            "type": "array",
            "items": {
                "type": "string",
                "format": "idn-email"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "priority": {
            "description": "The email priority",
            "type": "integer",
            "minimum": 1,
            "maximum": 10
        },
        "body": {
            "description": "The email body",
            "type": "string"
        },
        "attachments": {
            "description": "The email attachments",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string",
                        "pattern": "^(.+)\/([^\/]+)$"
                    }
                },
                "additionalProperties": false
            },
            "uniqueItems": true
        },
        "send": {
            "description": "Identifies if the email is sent or still a draft",
            "type": "boolean" 
        }
    },
    "required": ["id","time","sender","recievers","priority","send"],
    "additionalProperties": false

}